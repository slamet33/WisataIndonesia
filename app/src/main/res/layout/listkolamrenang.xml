<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNamaKolamRenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Blaster Semarang"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAlamatKolamRenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:text="@string/contohalamat" />

        <ImageView
            android:id="@+id/imgKolamRenang"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtTiketKolamRenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 50000" />

    </LinearLayout>
</android.support.v7.widget.CardView>